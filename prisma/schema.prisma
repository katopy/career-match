generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  answers   Answer[]
  careers   UserCareer[]
}

model Career {
  id          Int          @id @default(autoincrement())
  name        String
  description String
  users       UserCareer[]
}

model UserCareer {
  userId    Int
  careerId  Int
  score     Float

  user   User   @relation(fields: [userId], references: [id])
  career Career @relation(fields: [careerId], references: [id])

  @@id([userId, careerId])
}

model Question {
  id       Int      @id @default(autoincrement())
  text     String
  answers  Answer[]
}

model Answer {
  id         Int      @id @default(autoincrement())
  userId     Int
  questionId Int
  choice     Int

  user     User     @relation(fields: [userId], references: [id])
  question Question @relation(fields: [questionId], references: [id])

  @@unique([userId, questionId])
}

